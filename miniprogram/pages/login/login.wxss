@import "../../lib/weui.wxss";

page{
  width: calc(100% - 124rpx);
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 62rpx;
}
.topimg{
  margin: 120rpx auto 60rpx;
  width: 392rpx;
  height: 392rpx;
}
.title{
  font-family: PingFang-SC-Medium;
  font-size: 34rpx;
  text-align: center;
  font-weight: 500;
}
.tips{
  font-family: PingFang-SC-Regular;
  margin-top: 18rpx;
  font-size: 28rpx;
  color: var(--lb-color);
  text-align: center;
  font-weight: 400;
}
.mainbtn{
  margin-top: 72rpx;
  height: 96rpx;
  width: 100% !important;
  line-height: 96rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  padding: 0;
  color: #FFFFFF;
  background: var(--mb-color);
}
.mainbtn:active{
  background: var(--zb-color);
}
.info_model{
	background-color: #FFFFFF;
	width: 690rpx;
	margin: 32rpx auto;
	border-radius: 16rpx;
}
.info_model .info_item{
	padding: 40rpx;
	min-height: 48rpx;
	display: flex;
}
.info_model .info_item view{
	font-size: 32rpx;
	color: var(--lb-color);
	width: 65%;
}
.info_model .info_item view+view{
	font-size: 32rpx;
	color: #000000;
	width: 35%;
	text-align: left;
}
.info_model .info_item+.info_item{
	box-shadow: inset 0 2rpx 0 0 rgba(224,224,224,0.50);
}