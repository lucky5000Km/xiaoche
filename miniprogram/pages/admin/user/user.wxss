/* pages/admin/user/user.wxss */
.habit {
    margin: 0rpx auto;
    width: 100%;
    height: 60px;
    border-radius: 10rpx;
    background-color: #fff;
    display: flex;
    padding: 15rpx;
    box-sizing: border-box;
    position: relative;
    border-bottom: 1px solid #f1f1f1;
  }
  .habit .index {
    margin: 25rpx 20rpx 0px 30rpx;
    font-weight: bold;
    color: #747474;
  }
  .habit .icon {
    margin-right: 25rpx;
  }
  .habit .icon .iconImg {
    margin-top: 10rpx;
    width: 70rpx;
    height: 70rpx;
  }
  .habit .info {
    display: flex;
    flex-direction: column;
    width: 60vw;
  }
  .habit .info .title {
    margin: 25rpx 0rpx;
    font-size: 30rpx;
  }
  .habit .img {
    position: absolute;
    right: 30rpx;
    margin-top: 25rpx;
    width: 40rpx;
    height: 40rpx;
  }

  .habitlist .avatar {
    width: 90rpx;
    height: 90rpx;
  }
.avatar-title {
  display: flex;
  flex-direction: column;
  width: 30vw;
  margin: 25rpx 0rpx;
  font-size: 30rpx;
  }
  .habitlist {
    position: relative;
  }
  .text-center{
    text-align: center;
  }
  .kelong {
    z-index: 999;
    position: absolute;
    box-shadow: 1px 1px 5px #ccc;
  }
  .gray {
    background-color: #efecec;
  }

.van-swipe-cell__right{
  display: inline-block;
  width: 65px;
  color: #fff;
  text-align: center;
  background-color: #f44;
  line-height: 65px;
}
.box {
  display: flex;
  flex-direction:column;
  height:100vh;
  overflow:hidden;
}
.box-head {
  flex-shrink: 0;
  height: 60px;
}
.box-scroll {
  flex: 1;
  height: 90vh;
}