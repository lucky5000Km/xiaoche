@import "../../lib/weui.wxss";

page{
  width: calc(100% - 124rpx);
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 62rpx;
  background-color: rgb(248, 248, 248);
}
.topimg{
  margin: 120rpx auto 60rpx;
  width: 392rpx;
  height: 392rpx;
}
.title{
  font-family: PingFang-SC-Medium;
  font-size: 34rpx;
  text-align: center;
  font-weight: 500;
}
.tips{
  font-family: PingFang-SC-Regular;
  margin-top: 18rpx;
  font-size: 28rpx;
  color: var(--lb-color);
  text-align: center;
  font-weight: 400;
}
.mainbtn{
  margin-top: 72rpx;
  height: 96rpx;
  width: 100% !important;
  line-height: 96rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  padding: 0;
  color: #FFFFFF;
  background: var(--mb-color);
}
.hide{
  display: none;
}
.mainbtn:active{
  background: var(--zb-color);
}
.info_model{
	background-color: #FFFFFF;
	width: 690rpx;
	margin: 32rpx auto;
	border-radius: 16rpx;
}
.info_model .info_item{
	padding: 40rpx;
	min-height: 48rpx;
	display: flex;
}
.info_model .info_item view{
	font-size: 32rpx;
	color: var(--lb-color);
	width: 65%;
}
.info_model .info_item view+view{
	font-size: 32rpx;
	color: #000000;
	width: 35%;
	text-align: left;
}
.info_model .info_item+.info_item{
	box-shadow: inset 0 2rpx 0 0 rgba(224,224,224,0.50);
}
 
.area {
  height: 300rpx;
}
.area::after{
  content: '';
  width: 120%;
  height: 300rpx;
  position: absolute;
  z-index: -1;
  left: -10%;
  top: 0;
  border-radius: 0 0 50% 50%;
  /* background: linear-gradient(160deg,#84c4ef, #84c4ef); */
  background: linear-gradient(160deg,#000000, #84c4ef);
}

.menu{
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  text-align: center;
  display: flex; 
  flex-direction: column
}
.menuItem{
  margin-top: 20rpx;
  height: 80rpx;
  border-radius: 30rpx;
  /* background-color:rgb(211, 211, 211); */
  background: var(--mb-color);
  display: flex; 
  justify-content:space-between
}
.menuIcon{
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.menuTitle{
  color: white;
  font-size: 30rpx
  ;margin-top: 15rpx;
  margin-right: 230rpx;
}
.menuArrow{
  margin-top: 20rpx;
  margin-right: 20rpx;
  color: gray;
}