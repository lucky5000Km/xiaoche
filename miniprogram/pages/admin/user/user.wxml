<van-sticky>
<van-tabs sticky active="{{ active }}" bind:change="changeTab">
  <van-tab title="家长">
    <block>
      <view class="gray habit text-center">
            <view class="avatar-title" >
              <view class="title">头像</view>
            </view>
            <view class="info">
              <view class="title">微信名</view>
            </view>
            <view class="info">
              <view class="title">宝贝名字</view>
            </view>
            <view class="info">
              <view class="title">是否激活</view>
            </view>
           
      </view>
    </block>
      <van-swipe-cell right-width="{{ 65 }}" wx:for="{{userList.PARENT}}" wx:key="_id">
        <view class="habit {{selectedIndex==index?'gray':''}}" >
            <view class="avatar">
              <image class="text-center" style="width: 90rpx; height: 90rpx; "  src="{{item.avatarUrl}}" mode="aspectFit" />
            </view>
            <view class="info text-center">
              <view class="title">{{item.nickName}}</view>
            </view>
            <view class="info text-center">
              <view class="title">{{item.kid_name}}</view>
            </view>
            <view class="info" style="text-align: right;">
              <switch checked="{{!item.disable}}" data-item="{{item}}" bindchange="switchEnableUser"/>
            </view>
        </view>
        
        <view slot="right" data-item="{{item}}" class="van-swipe-cell__right" bindtap="deleteUser" >删除</view>
      </van-swipe-cell>
  </van-tab>
  <van-tab title="司机">
    <block>
      <view class="gray habit" >
            <view class="info">
              <view class="title">头像</view>
            </view>
            <view class="info">
              <view class="title">用户名</view>
            </view>
            <view class="info">
              <view class="title">微信名</view>
            </view>
            <view class="info">
              <view class="title">是否激活</view>
            </view>
      </view>
    </block>
      <block wx:for="{{userList.DRIVER}}" wx:key="_id">
        <view class="habit {{selectedIndex==index?'gray':''}}" >
            <view class="info">
              <image style="width: 93rpx; height: 87rpx; display: block; box-sizing: border-box"  src="{{item.avatarUrl}}" mode="aspectFit" />
            </view>
            <view class="info">
              <view class="title">{{item.nickName}}</view>
            </view>
           
            <view class="info">
              <switch checked="{{!item.disable}}" data-item="{{item}}" bindchange="switchEnableUser"/>
            </view>
        </view>
      </block>
  </van-tab>
  <van-tab title="管理员">
    <block>
      <view class="gray habit" >
            
            <view class="info">
              <view class="title">头像</view>
            </view>
            <view class="info">
              <view class="title">用户名</view>
            </view>
            <view class="info">
              <view class="title">微信名</view>
            </view>
            <view class="info">
              <view class="title">是否激活</view>
            </view>
      </view>
    </block>
      <block wx:for="{{userList.ADMIN}}" wx:key="_id">
        <view class="habit {{selectedIndex==index?'gray':''}}" >
            <view class="info">
              <image style="width: 93rpx; height: 87rpx; display: block; box-sizing: border-box"  src="{{item.avatarUrl}}" mode="aspectFit" />
            </view>
            <view class="info">
              <view class="title">{{item.username}}</view>
            </view>
            <view class="info">
              <view class="title">{{item.nickName}}</view>
            </view>
            
            <view class="info">
              <switch checked="{{!item.disable}}" data-item="{{item}}" bindchange="switchEnableUser"/>
            </view>
        </view>
      </block>
  </van-tab>
</van-tabs>
</van-sticky><view>


</view>
