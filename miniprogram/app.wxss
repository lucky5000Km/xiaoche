Page{
  --mb-color:#353535;
  --zb-color:#505050;
  --lb-color:#808080;
}
.tips{
  font-family: PingFang-SC-Regular;
  margin-top: 18rpx;
  font-size: 28rpx;
  color: var(--lb-color);
  text-align: center;
  font-weight: 400;
}
.card{
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
  text-align: center;
  box-shadow: 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.2);
}
.area{
  border-color: seagreen;
}
.mainbtn{
  margin-top: 72rpx;
  height: 96rpx;
  width: 100% !important;
  line-height: 96rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  padding: 0;
  color: #FFFFFF;
  background: var(--mb-color);
}
